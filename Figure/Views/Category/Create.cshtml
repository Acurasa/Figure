@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">
                Create Category <i class="bi bi-plus-square-dotted"></i>
            </h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name"class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
             <div class="mb-3 row p-1">
           <label asp-for="DisplayOrder"class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="col-6 p-2">
            <button type="submit" class="btn btn-primary form-control">
                Submit <i class="bi bi-check-lg"></i>
            </button>
        </div>
        <div class="col-6 p-2">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to List <i class="bi bi-arrow-left"></i>
            </a>
        </div>

       
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}